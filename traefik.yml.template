api:
  dashboard: true
  insecure: false

entryPoints:
  web:
    address: ":80"
  websecure:
    address: ":443"

providers:
  docker:
    endpoint: "unix:///var/run/docker.sock"
    exposedByDefault: false
    network: cvat_cvat
  file:
    filename: /etc/traefik/dynamic.yml

# Self-signed certificate for Cloudflare Full mode
tls:
  stores:
    default:
      defaultGeneratedCert:
        resolver: default
        domain:
          main: "cvat.REGION_PLACEHOLDER.DOMAIN_PLACEHOLDER"
